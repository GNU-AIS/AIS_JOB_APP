<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.analysis.AnalysisFragment">

    <androidx.cardview.widget.CardView
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:layout_marginEnd="10dp"
        android:layout_marginTop="3dp"
        app:cardCornerRadius="10dp"
        tools:ignore="MissingConstraints" >

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingHorizontal="5dp"
            android:paddingVertical="20dp">

            <TextView
                android:id="@+id/tv_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/maruburi_bold"
                android:textSize="18sp"
                android:text="나의 커리어"/>

            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/tv_credit"
                android:textColor="@color/writeColor1"
                app:layout_constraintTop_toBottomOf="@id/tv_title"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintEnd_toStartOf="@id/tv_toeic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/maruburi_bold"
                android:text="학점: 0.0"/>

            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/tv_toeic"
                android:textColor="@color/writeColor1"
                android:layout_marginStart="10dp"
                app:layout_constraintTop_toBottomOf="@id/tv_title"
                app:layout_constraintStart_toEndOf="@id/tv_credit"
                app:layout_constraintEnd_toStartOf="@id/tv_toeic_sp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/maruburi_bold"
                android:text="토익: 없음"/>

            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/tv_toeic_sp"
                android:textColor="@color/writeColor1"
                android:layout_marginStart="10dp"
                app:layout_constraintTop_toBottomOf="@id/tv_title"
                app:layout_constraintStart_toEndOf="@id/tv_toeic"
                app:layout_constraintEnd_toStartOf="@id/tv_opeic"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/maruburi_bold"
                android:text="토익스피킹: 없음"/>

            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/tv_opeic"
                android:textColor="@color/writeColor1"
                android:layout_marginStart="10dp"
                app:layout_constraintTop_toBottomOf="@id/tv_title"
                app:layout_constraintStart_toEndOf="@id/tv_toeic_sp"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/maruburi_bold"
                android:text="OPIC: 없음"/>


            <TextView
                android:id="@+id/tv_foreign_lan"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:fontFamily="@font/maruburi_bold"
                android:text="기타 외국어: 없음"
                android:textColor="@color/writeColor1"
                app:layout_constraintStart_toStartOf="@+id/tv_credit"
                app:layout_constraintTop_toBottomOf="@id/tv_credit" />

            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/tv_overseas_study"
                android:textColor="@color/writeColor1"
                android:layout_marginStart="10dp"
                app:layout_constraintTop_toBottomOf="@id/tv_credit"
                app:layout_constraintStart_toEndOf="@id/tv_foreign_lan"
                app:layout_constraintEnd_toStartOf="@id/tv_intern"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/maruburi_bold"
                android:text="해외 경험: 없음"/>

            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/tv_intern"
                android:textColor="@color/writeColor1"
                android:layout_marginStart="10dp"
                app:layout_constraintTop_toBottomOf="@id/tv_credit"
                app:layout_constraintStart_toEndOf="@id/tv_overseas_study"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/maruburi_bold"
                android:text="인턴: 무경험"/>

            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/tv_awards"
                android:textColor="@color/writeColor1"
                app:layout_constraintTop_toBottomOf="@id/tv_foreign_lan"
                app:layout_constraintStart_toStartOf="@id/tv_credit"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/maruburi_bold"
                android:text="교내/외 수상: 0회"/>

            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/tv_volunteer"
                android:textColor="@color/writeColor1"
                android:layout_marginStart="10dp"
                app:layout_constraintTop_toBottomOf="@id/tv_foreign_lan"
                app:layout_constraintStart_toEndOf="@id/tv_awards"
                app:layout_constraintEnd_toStartOf="@id/tv_certificate"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/maruburi_bold"
                android:text="봉사활동: 0회"/>

            <TextView
                android:layout_marginTop="10dp"
                android:id="@+id/tv_certificate"
                android:textColor="@color/writeColor1"
                android:layout_marginStart="10dp"
                app:layout_constraintTop_toBottomOf="@id/tv_foreign_lan"
                app:layout_constraintStart_toEndOf="@id/tv_volunteer"
                app:layout_constraintEnd_toEndOf="parent"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="@font/maruburi_bold"
                android:text="자격증: 0개"/>

        </androidx.constraintlayout.widget.ConstraintLayout>



    </androidx.cardview.widget.CardView>


    <TextView
        android:id="@+id/text_analysis"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="8dp"
        android:layout_marginTop="8dp"
        android:layout_marginEnd="8dp"
        android:textAlignment="center"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.floatingactionbutton.FloatingActionButton
        android:id="@+id/fab"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="18dp"
        android:contentDescription="@string/myCareer"
        android:src="@drawable/ic_baseline_edit_note_24"
        app:backgroundTint="#515151"
        app:tint="@android:color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        tools:ignore="MissingConstraints" />

</androidx.constraintlayout.widget.ConstraintLayout>